<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:gravity="center"
        android:background="#ffffff"
        android:padding="20dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aladin"
        android:text="Welcome,"
        android:textColor="#274BD8"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/basic"
        android:text="Sign up to continue"
        android:textColor="#000000"
        android:textSize="18sp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:backgroundTint="#274BD8"
            android:drawableLeft="@drawable/ic_person_pin"
            android:drawablePadding="12dp"
            android:fontFamily="@font/open_sans_semibold"
            android:hint="First Name"
            android:textColorHint="#81000000"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:backgroundTint="#274BD8"
            android:drawableLeft="@drawable/ic_person_pin"
            android:drawablePadding="12dp"
            android:fontFamily="@font/open_sans_semibold"
            android:hint="Last Name"
            android:textColorHint="#81000000"
            android:textSize="13sp" />
    </LinearLayout>

        <EditText
            android:id="@+id/etmaill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#274BD8"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="12dp"
            android:fontFamily="@font/open_sans_semibold"
            android:hint="Email Address"
            android:textColorHint="#81000000"
            android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:backgroundTint="#274BD8"
            android:drawableLeft="@drawable/ic_flag"
            android:drawablePadding="12dp"
            android:fontFamily="@font/open_sans_semibold"
            android:hint="Country"
            android:textColorHint="#81000000"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/et_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:backgroundTint="#274BD8"
            android:drawableLeft="@drawable/ic_flag"
            android:drawablePadding="12dp"
            android:fontFamily="@font/open_sans_semibold"
            android:hint="State"
            android:textColorHint="#81000000"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/country_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1.9"
            android:backgroundTint="#274BD8"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="12dp"
            android:fontFamily="@font/open_sans_semibold"
            android:hint="CC"
            android:textColorHint="#81000000"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="0.5"
            android:backgroundTint="#274BD8"
            android:drawablePadding="12dp"
            android:fontFamily="@font/open_sans_semibold"
            android:hint="Phone Number"
            android:textColorHint="#81000000"
            android:textSize="13sp" />
    </LinearLayout>

        <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:backgroundTint="#274BD8"
            android:drawableLeft="@drawable/ic_eye"
            android:drawablePadding="12dp"
            android:fontFamily="@font/open_sans_semibold"
            android:hint="Password"
            android:textColor="#000"
            android:textColorHint="#81000000"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/etconfPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:backgroundTint="#274BD8"
            android:drawableLeft="@drawable/ic_eye"
            android:drawablePadding="12dp"
            android:fontFamily="@font/open_sans_semibold"
            android:hint="Confirm Password"
            android:textColor="#000"
            android:textColorHint="#81000000"
            android:textSize="13sp" />

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/login_btn_bg"
        android:fontFamily="@font/fredoka_one"
        android:text="Sign Up"
        android:textColor="#ffffff" />

    </LinearLayout>


</ScrollView>
